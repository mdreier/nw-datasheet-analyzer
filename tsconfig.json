{
    "compilerOptions": {
      "target": "ES2021",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": false,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist/types"
    },
    "exclude": [
      "node_modules",
      ".npm",
      "dist"
    ],
    "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs/api",
      "excludePrivate": true
    }
  }